%h1
  - if params[:activity_type]
    = @page_title = params[:activity_type].underscore.gsub('_',' ').titlecase.pluralize
  - else
    = @page_title = "Life Stream"

- unless @activities.empty?
  - @activities.each do |activity|
    = render :partial => "activities/#{activity.class.to_s.underscore}", :locals => {:activity => activity}
